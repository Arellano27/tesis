
<link href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.css')}}" type="text/css" rel="stylesheet"/>
<form id="form-home" name="form-ingresonotas" method="post" action="{{ path('docentes_ingreso_notas') }}" >     
<div class="row" id="tabla1">
                <div class="col-lg-12">
                  <div ng-controller="AppCtrl">
 
   
</div>
                      
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="row" >
                            <div class="col-lg-3">
                                <label class="control-label" >Docente :</label>
                                <input class="form-control" id="disabledInput" type="text" placeholder="Oscar Apolinario" disabled />
                            </div>
                            <div class="col-lg-3">
                                <label>Periodo :</label>
                                <input class="form-control" id="disabledInput" type="text" placeholder="Ciclo 2" disabled>
                            </div>
                            <div class="col-lg-3">
                                <label>Asignatura :</label>
                                <input class="form-control" id="disabledInput" type="text" placeholder="Desarrollo Web" disabled>
                            </div>
                            <div class="col-lg-3">
                                <label>Curso :</label>
                                <input class="form-control" id="disabledInput" type="text" placeholder="S8A" disabled>
                            </div>
                               
                            
                            <div class="col-lg-12" style="margin-bottom: 20px;">
                                &nbsp;
                            </div>
                            <div class="dataTable_wrapper col-lg-12">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th rowspan="2" class="text-center " style="vertical-align: middle" >Codigo</th>
                                            <th rowspan="2" style="text-align: center;vertical-align: middle">Estudiante</th>
                                           
                                        
                                            <th colspan="{{ arr_tareas|length}}" class="text-center">Acad√©micos</th>
                                            <th rowspan="2" style="text-align: center;vertical-align: middle">Examen</th>
                                             <th rowspan="2" style="text-align: center;vertical-align: middle">Total</th>
                                        </tr>
                                        <tr>
                                            {%for num ,tareas in arr_tareas %}
                                            <th class="text-center">{{tareas.tarealm}}</th>
                                             <input type = "hidden" value = "{{ tareas.tarealm }}" name = "hdtarea_{{num+1}}" />
                                            {% endfor %}
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <input type = "hidden" value = "nada" id = "hdservicio" name = "hdservicio" />
                                {%for count ,alumnos in arr_datos %}
                                       <tr class="odd gradeX">
                                           <td width = "5%" >{{count+1}}</td>
                                            <td width = "20%">{{ alumnos.nombrealm }} <input type = "hidden" value = "{{ alumnos.nombrealm }}" name = "hdalumno_{{count+1}}" /></td>
                                            {%for count2 ,tareas in arr_tareas %}
                                            <td><input class="form-control" name="academicos_{{count+1}}_{{count2+1}}" type="text"  value="{{count+1}}_{{count2+1}}"/></td>
                                            {% endfor %}
                                            
                                            <td><input class="form-control" name="examen_{{count+1}}" type="text"  value="{{count+1}}"/></td>
                                            <td class="center"><input class="form-control" name="nota_{{count+1}}" type="text" placeholder="00" disabled></td>
                                        </tr>
                                {% endfor %}
                                <input type = "hidden" value = "{{arr_tareas|length}}" name = "hdcounttar" />
                                <input type = "hidden" value = "{{arr_datos|length}}" name = "hdcountalm" />
                                   </tbody>
                                </table>
                            </div>
                                    </div>
                            <!-- /.table-responsive -->
                            <div class="well">
                                <h4>Nota :</h4>
                                <p>Por su seguridad se recomienda verificar que las notas ingresadas sean las correctas</p>
                                <div class="text-center">
                                <button type="submit" onclick="confirm('ingresonotas')" class="btn btn-primary" >Guardar</button>
                                </div>
                            </div>
                        </div>
                    
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>

</form>
                           

                                   
                                   


